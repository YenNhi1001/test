<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">
    <LinearLayout
        android:layout_marginBottom="@dimen/maginBottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/imgHinhDaiDien"
            android:layout_width="70dp"
            android:layout_height="70dp"
            app:srcCompat="@drawable/iconuser"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="2dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="left">
            <TextView
                android:id="@+id/txtTenNguoiDung"
                android:textStyle="bold"
                android:textColor="@color/txtUser"
                android:textSize="@dimen/sizetext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/txtUser"/>
            <TextView
                android:id="@+id/txtNoiDung"
                android:textSize="@dimen/sizetext2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/txtUser"
                android:text="@string/txtTime"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>