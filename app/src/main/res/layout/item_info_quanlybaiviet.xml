<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txtTenNguoiDang"
        android:textSize="@dimen/sizeTenNguoiDang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ngô Hiếu"/>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imgMonAn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:adjustViewBounds="true"
            android:src="@drawable/login"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
    </android.support.constraint.ConstraintLayout>

    <TextView
        android:id="@+id/txtTenMonAn"
        android:textSize="@dimen/sizeTextNormal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bánh Huế"/>
    <TextView
        android:id="@+id/txtLuotThich"
        android:textSize="@dimen/sizeTextThich"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="69 lượt thích"/>
    <TextView
        android:id="@+id/txtTime"
        android:textSize="@dimen/sizeTextThich"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mới đây"/>
    <RatingBar
        android:theme="@style/RatingBar"
        android:id="@+id/simpleRatingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</LinearLayout>